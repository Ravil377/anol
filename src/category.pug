extends base/pug/base
//- include ./components/slider/slider
//- include ./components/links/links

append variables
    - var title = 'Террасная доска из ДПК'
    - var pageClass = 'category'
    - var notBreadcrumbs = 'true'
    - var menuHref = '/'

block welcome
    .welcome.welcome_mini
        .welcome__container
            .welcome__slide(style="--bg:url(../images/slide2.png);")
                img(src="./images/decor.svg" alt="Слайд 2")
                .outer 
                    .inner
                        .welcome__action акция до 20 мая
                        h2 Дополнительная скидка на монтаж 
                            span 10%
                        ul.welcome__list
                            li 
                                +icon('check')
                                | При покупке террасной доски Deckard
                        .welcome__product
                            .welcome__product-content
                                img(src='./images/welcome-banner.png' alt="товар")
                                .welcome__product-price 
                                    .welcome__product-price-new
                                        | 1 990
                                        div ₽
                                        div м
                                            sup 2
                                    .welcome__product-price-old
                                        | 2 590
                                        div ₽
                                        div м
                                            sup 2
                        +btn('подробнее', '', true).invert                       
block product
    section.product
        h1.title Террасная доска из ДПК
        p Технологами компании был тщательно изучен зарубежный опыт производства изделий из древесно-полимерного композита производителей Китая, США, Европы, Южной Кореи, благодаря чему была разработана политика
        button.filter-btn.filter-btn-js
            +icon('filter')
            | Подбор по параметрам
        ul.product__items
            li 
                +icon('sert')
                | Продукция сертифицирована
            li 
                +icon('sun')
                | Не выцветает на солнце
            li 
                +icon('bugs')
                | Не подвержена влиянию насекомых
            li 
                +icon('person')
                | Не скользит и не оставляет заноз
            li 
                +icon('notneed')
                | Не нуждается в пропитке
        .product__list 
            ul.calc-js 
                li.card.card__mini
                    .card__gallery.card__gallery-js
                        .card__galery-img
                            img(src='./images/1.png' data-src='./images/1.png' alt="Террасная доска").card__img-js
                        .card__preview.card__preview-js
                            img(src='./images/1-1.png' data-src="./images/1-1.png" alt="Террасная доска")
                            img(src='./images/1-2.png' data-src="./images/1-2.png" alt="Террасная доска")
                            img(src='./images/1-3.png' data-src="./images/1-3.png" alt="Террасная доска")
                            img(src='./images/1-4.png' data-src="./images/1-4.png" alt="Террасная доска")
                            img(src='./images/1-5.png' data-src="./images/1-5.png" alt="Террасная доска")
                        .card__label
                            p._yellow Новинка
                    .card__content 
                        h3 Террасная доска из ДПК Praktik New Орех
                        p Есть в наличии
                        ul 
                            li
                                +icon('houses')
                                | Для дома и дачи
                            li
                                +icon('swimming-pool')
                                | Для бассейнов и пирсов
                        .card__size
                            p Длина:
                            ul
                                li 3м
                                li._disabled 4м
                                li 5м
                                li 6м
                            p Размер: 150х25 мм
                        .card__for 
