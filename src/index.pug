append variables
    - var title = 'Главная страница сайта'
    - var pageClass = 'homepage'
    - var menuHref = '/'

block welcome
    .welcome
        .welcome__container.welcome-js 
            .swiper-wrapper 
                .welcome__slide.swiper-slide(style="--bg-1:url(../images/slide1-overlay.png);")
                    img(src="./images/slide1.png" alt="Слайд 1")
                    .outer 
                        .inner
                            h1 Террасная доска, заборы, ограждения&nbsp;и ступени из ДПК 
                                span от производителя
                            ul.welcome__list
                                li 
                                    +icon('check')
                                    | Проектирование
                                li 
                                    +icon('check')
                                    | Монтаж “под ключ”
                                li 
                                    +icon('check')
                                    | Частные и коммерческие объекты
                            .welcome__slide-bottom
                                p Доставка по всей территории
                                    span.rus
                                    | РФ
                                +btn('Перейти в каталог', '', true).invert
                .welcome__slide.swiper-slide(style="--bg:url(../images/slide2.png);")
                    img(src="./images/decor.svg" alt="Слайд 2")
                    .outer 
                        .inner
                            h2 Дополнительная скидка на монтаж 
                                span 10%
                            ul.welcome__list
                                li 
                                    +icon('check')
                                    | При покупке террасной доски Deckard
                            .welcome__product
                                .welcome__product-content
                                    img(src='./images/skidka.png' alt="товар")
                                    +icon('decor')
                                    .welcome__product-decor
                                    .welcome__product-decor1
                                    .welcome__product-price 
                                        .welcome__product-price-new
                                            | 1 990
                                            div ₽
                                            div м
                                                sup 2
                                        .welcome__product-price-old
                                            | 2 590
                                            div ₽
                                            div м
                                                sup 2
                            .welcome__slide-bottom
                                p Доставка по всей территории
                                    span.rus
                                    | РФ
                                +btn('Узнать подробнее', '', true).invert
        .outer(style="height: 100px;position: absolute;left:0;top:50%;width:100%;transform:translateY(-50%);z-index: 4;")        
            .inner(style="position: relative;position: relative;height: 100%;")
                .slider__button._white.slider__button-prev.welcome__button-prev-js
                    <svg width="16" height="31" viewBox="0 0 16 31" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15.2725 30.8029L16 30.0814L1.45441 15.645L16 1.20862L15.2725 0.487127L0 15.645L15.2725 30.8029Z"/>
                    </svg>
                .slider__button._white.slider__button-next.welcome__button-next-js
                    <svg width="16" height="31" viewBox="0 0 16 31" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15.2725 30.8029L16 30.0814L1.45441 15.645L16 1.20862L15.2725 0.487127L0 15.645L15.2725 30.8029Z"/>
                    </svg>
